{
  "name": "template-mock-bot",
  "version": "0.0.0-0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 18"
  },
  "workspaces": [
    "packages/bot/",
    "packages/nodejs/",
    "packages/web/"
  ],
  "files": [
    "iisnode.yml",
    "packages/nodejs/bot/**/*",
    "packages/nodejs/dist/**/*",
    "packages/nodejs/web/**/*",
    "web.config"
  ],
  "main": "./packages/nodejs/dist/index.global.js",
  "exports": {
    ".": {
      "import": "./packages/bot/dist/index.js",
      "browser": "./packages/web/dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "precommit": "npm run precommit --workspaces",
    "start": "nodemon --exec \"npm run build && node .\" --ext js,json,ts --verbose --watch './packages/*/src/**'"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
